<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8" />
    <title>Prosumer Page</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="css/style.css"> 
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js@2.8.0"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
    <script src="js/slider.js"></script>  
    <script src="js/charts.js"></script>
    <script src="js/profile.js"></script>
    <script src="js/prosumer.js"></script>
  </head>
 
  <body>
    <div class="container" id="navbar">      
      <h1><%= message %>'s Dashboard</span></h1>
      <p>Last updated: <span id="timestamp"></span></p>
      <ul class="nav nav-tabs">
        <li class="nav-item" id="nav-monitor">
          <a class="nav-link active" >Monitor</a>
        </li>
        <li class="nav-item" id="nav-profile">
          <a class="nav-link" >Profile</a>
        </li>
      </ul>
      <br>
    </div>

    <div class="container" id="monitor"> 
      <div class="row">

        <div class="col-md" id="useBatteryRatio" style="width: 100%" display="table">
          <h2>Battery settings</h2>
          
          <!-- TODO: These sliders should only update after the user no longer clicks on the slider -->
          <p>Use battery ratio</p>
          <input type="range" min="0" max="100" value="">
          <p>Value: <span id="useBatteryRatioValue"></span>%</p>
          <script>updateSliderVal("useBatteryRatioSlider", "useBatteryRatioValue");</script>

          <p>Fill battery ratio</p>
          <input type="range" min="0" max="100" value="">
          <p>Value: <span id="fillBatteryRatioValue"></span>%</p>
          <script>updateSliderVal("fillBatteryRatioSlider", "fillBatteryRatioValue");</script>
 
        </div>

        <div class="col-lg">
          <h2>Production</h2>
          <canvas id="chart"></canvas>
          <!--<script>productionChart('#chart');</script>-->
          <script>let productionChart = new ProsumerChart('#chart');</script>
        </div>

      </div>

      <h2>Information</h2>
      <div class="row">
        <!-- Display wind, production etc. as values! -->  
        <div class="col-md">
          <ul>
            <li>Current wind speed:</li><span id="windspeed"></span>
            <li>Current production:</li><span id="production"></span>
            <li>Current consumption:</li><span id="consumption"></span>
          </ul>
        </div>

        <div class="col-md">
          <ul>
            <li>Net production:</li><span id="netproduction"></span>
            <li>Battery capacity:</li><span id="batterycap"></span>
            <li>Market price:</li><span id="marketprice"></span>
          </ul>
        </div>

      </div>
    </div>

    <div class="container" id="profile" style="display:none">
      <h2>Profile</h2>
      <button type="submit" class="btn btn-primary" onclick="deleteUser()">Delete me!</button>
      <span id="deleteUserMsg"></span>

      <div class="row">

        <div class="col-md">
          <form id="update">
            <div class="form-group">
              <label for="oldPassword">Enter current password</label>
              <input type="password" class="form-control" name="oldPassword" placeholder="Current password">
            </div>
            
            <div class="form-group">
              <label for="newPassword">New password</label>
              <input type="password" class="form-control" name="newPassword" placeholder="Enter new password">

            </div>

            <button type="submit" class="btn btn-primary">Update</button>
            <span id="updateMessage"></span>
          </form>
        </div>

        <div class="col-sm">
          <div class = "img-thumbnail">
            <img src="" class="img-thumbnail" alt="Profile picture" id="profileImg">
          </div>
          <input type="file" id="fileImg" accept="image/*" onchange="readUrl(this)"/>
          <span>Max file size: 5mb</span>
          <span id ="profileMessage"></span>
        </div>



      </div>  

    </div>
    <div class="container">
      <!-- Log out button -->
      <form action="/logout" method="get">
        <input type="submit" class="btn btn-primary" value="Log Out"/>
      </form>
    </div>
  </body>
</html>